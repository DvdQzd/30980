<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header.ejs') %>
</head>
<body>
    <div class="container mt-5 bg-light rounded">
        <%- include('../partials/form.ejs') %>
        <section class="mt-5">
            <h1 class="text-danger">Historial</h1>
            <% if ( info.length === 0) { %>
                <h2 class="bg-danger rounded text-center m-4"> No se encontraron datos</h2>
                
            <% } else{ %>  
            <table class="table table-dark">
                <tr class="text-warning">
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                </tr>
                <% info.forEach(function(user){ %>
                    <tr>
                        <td><%=user.name%></td>
                        <td><%=user.surname%></td>
                        <td><%=user.age%></td>
                    </tr>
                <% }); %>
            </table>
            <% } %>
        </section>
    </div>
    <%- include('../partials/footer.ejs') %>
</body>
</html>